@{
    ViewData["Title"] = "Details";
}

@model ee.Models.Sight

<style>
    .details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 5px;
    }

    .details-title {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .details-item {
        margin-bottom: 10px;
    }

    .back-button {
        border: none;
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<div class="details-container">
    <h2 class="details-title">Details of sight</h2>

    <div class="details-item">
        <strong>Name:</strong> @Model.Name
    </div>

    <div class="details-item">
        <strong>Description:</strong> @Model.Text
    </div>

    <div class="details-item">
        <strong>Address:</strong> @Model.Address
    </div>

    <button onclick="goBack()" class="back-button">Back to all</button>
</div>

<script>function goBack() {
        window.history.back();
    }</script>
